---
import PageHeader from "@/components/PageHeader.astro";
import Shape from "@/components/Shape.astro";
import OurMembers from "@/components/about/OurMembers.astro";
import Base from "@/layouts/Base.astro";
import { getEntryBySlug } from "astro:content";

const board = await getEntryBySlug("barcelona", "board");
const { members } = board.data;
const page_data = {
  ...board.data,
  content: board.body,
};
---

<Base
  title={board.data.title}
  meta_title={board.data.meta_title}
  description={board.data.description}
  image={board.data.image}
>
  <Shape />
  <section class="page-hero py-16">
    <div class="container">
      <div class="page-hero-content mx-auto max-w-[768px] text-center">
        <PageHeader page_data={page_data} />
      </div>
      <OurMembers members={members} />
    </div>
  </section>
</Base>
